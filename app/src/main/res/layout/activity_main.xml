<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/bLeague"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:fb_defaultColor="@color/colorPrimaryDark"
            app:fb_focusColor="@color/colorAccent"
            app:fb_radius="24dp"
            app:fb_text=""
            app:layout_constraintBottom_toBottomOf="@+id/tvLeague"
            app:layout_constraintEnd_toEndOf="@+id/tvLeague"
            app:layout_constraintLeft_toLeftOf="@+id/ivLeague"
            app:layout_constraintRight_toRightOf="@+id/tvLeague"
            app:layout_constraintStart_toStartOf="@+id/ivLeague"
            app:layout_constraintTop_toTopOf="@+id/ivLeague"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/bTeam"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:fb_defaultColor="@color/colorPrimaryDark"
            app:fb_focusColor="@color/colorAccent"
            app:fb_radius="24dp"
            app:fb_text=""
            app:layout_constraintBottom_toBottomOf="@+id/tvTeam"
            app:layout_constraintEnd_toEndOf="@+id/tvTeam"
            app:layout_constraintLeft_toLeftOf="@+id/ivTeam"
            app:layout_constraintRight_toRightOf="@+id/tvTeam"
            app:layout_constraintStart_toStartOf="@+id/ivTeam"
            app:layout_constraintTop_toTopOf="@+id/ivTeam"
            />

        <ImageView
            android:id="@+id/ivLeague"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:padding="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_diagram"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            />

        <ImageView
            android:id="@+id/ivTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:padding="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_team"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45"
            />

        <android.support.constraint.Barrier
            android:id="@+id/barrierImageToText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="ivLeague,ivTeam"/>

        <TextView
            android:id="@+id/tvLeague"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="League"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/ivLeague"
            app:layout_constraintRight_toRightOf="@+id/ivLeague"
            app:layout_constraintTop_toBottomOf="@+id/barrierImageToText"
            />

        <TextView
            android:id="@+id/tvTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Team"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/ivTeam"
            app:layout_constraintRight_toRightOf="@+id/ivTeam"
            app:layout_constraintTop_toBottomOf="@+id/barrierImageToText"
            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>